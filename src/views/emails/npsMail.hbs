    <a target="_blank" class="value" href="{{link}}/answers/8?u={{survey_user_id}}">8</a>
    <a target="_blank" class="value" href="{{link}}/answers/9?u={{survey_user_id}}">9</a>
    <a target="_blank" class="value" href="{{link}}/answers/10?u={{survey_user_id}}">10</a>
  </div>

  <br />
